@model City

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add City</h2>
			</br>
		</div>
		@* <div asp-validation-summary="All"></div> *@
		<div class="mb-3">
			<label asp-for="cityName">
				<input asp-for="cityName" class="form-control" />
				<span asp-validation-for="cityName" class="text-danger"></span>
			</label>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Add</button>
		<a asp-controller="Cities" asp-action="Index" class="btn btn-primary">
			Back
		</a>
	</div>
</form>
