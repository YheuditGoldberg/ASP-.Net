@model City

<form method="post" asp-action="DeletePOST">
	<input asp-for="cityID" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete City</h2>
			</br>
		</div>
		<div class="mb-3">
			<label asp-for="cityName">
				<input asp-for="cityName" disabled class="form-control" />
			</label>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Cities" asp-action="Index" class="btn btn-primary">
			Back
		</a>
	</div>
</form>
